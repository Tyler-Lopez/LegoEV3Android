    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/permissions_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/text_feature_header_subtext"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_layout_devices_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include
            android:id="@+id/text_bluetooth_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recycler_view_devices_layout"
            layout="@layout/text_electronic_header"
            />
        <include
            android:id="@+id/recycler_view_devices_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="0dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="32dp"
            layout="@layout/recycler_view_adaptive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_bluetooth_header"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/centered_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
